<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/usernameTextSize"
        android:padding="@dimen/userDatePadding"
        android:layout_toRightOf="@id/iv_dp"
        android:layout_marginTop="@dimen/profileMarginTop"
        android:layout_marginLeft="@dimen/profileMarginLeft"
        style="@style/TextStyle"
        android:textColor="@color/profileTextColor"
        />
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/DateTextSize"
        android:padding="@dimen/userDatePadding"
        android:layout_below="@id/tv_username"
        android:layout_toRightOf="@id/iv_dp"
        android:layout_marginLeft="@dimen/profileMarginLeft"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/contentTextSize"
        android:padding="@dimen/contentPadding"
        android:textColor="@color/profileTextColor"
        android:layout_below="@id/iv_dp"/>

</RelativeLayout>